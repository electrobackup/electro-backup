<div class="container">
  <h1>Інформаці для доставки</h1>

  <% if flash[:error] %>
    <div class="error-message"><%= flash[:error] %></div>
  <% end %>

  <%= form_with model: @order, url: submit_shipping_checkouts_path, method: :post, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "Full Name" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :phone, "Phone Number" %>
      <%= f.text_field :phone, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, "Email Address" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :address, "Shipping Address" %>
      <%= f.text_area :address, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.submit "Submit Order", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
