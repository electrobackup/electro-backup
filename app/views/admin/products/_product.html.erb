<div id="<%= dom_id product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Назва:</strong>
    <%= product.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Опис:</strong>
    <%= product.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ціна:</strong>
    <%= product.price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Категорія:</strong>
    <%= product.category_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Активувати:</strong>
    <%= product.active %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this product", [:admin, product], class: "rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium" %>
    <%= link_to "Edit this product", edit_admin_product_path(product), class: "rounded-lg py-3 ml-2 px-5 bg-blue-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
