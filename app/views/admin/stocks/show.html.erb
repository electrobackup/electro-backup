<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_stock %>

    <%= link_to "Змінити цей залишок", edit_admin_product_stock_path(@admin_stock), class: "mt-2 rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Видалити залишок", admin_product_stock_path(@admin_stock), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-blue-100 font-medium" %>
    </div>
    <%= link_to "Назад до залишків", admin_product_stocks_path, class: "ml-2 rounded-lg py-3 px-5 bg-blue-100 inline-block font-medium" %>
  </div>
</div>
